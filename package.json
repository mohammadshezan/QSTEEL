{
  "name": "qsteel",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "npm run -w apps/web dev",
    "build": "npm run -w apps/web build && npm run -w apps/api build",
    "start": "npm run -w apps/api start",
    "postinstall": "npm -w apps/web run postinstall || true"
  }
}
